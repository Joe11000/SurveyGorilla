<div class="blanket">
	<div class="sign_up_container">
		<h2><%= @user.username %></h2>

		<form class="sign_up" action="/user/update" method="post">
			<input type="text" name="user[username]" value="<%=@user.username%>"><br>
      <input type="text" name="user[email]" value="<%=@user.email%>"><br>
			<input type="password" name="user[password]" placeholder="password"><br>
			<input class="button" type="submit" value="update info">
		</form>
	</div>
</div>